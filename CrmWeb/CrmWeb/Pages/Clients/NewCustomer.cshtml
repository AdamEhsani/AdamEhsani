@page
@model CrmWeb.Pages.Clients.NewCustomerModel
@{
}

@if (!string.IsNullOrEmpty(Model.errorMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.successMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h4>Create new customer</h4>
<form method="post">
    <div class="form-group">
        <label for="KundeInputName">Name</label>
        <input type="text" class="form-control" id="KundeInputName" name="Name" value="@Model.Customers.Name" placeholder="Name">
    </div>
    <div class="form-group">
        <label for="exampleInputTelefon">Phone</label>
        <input type="number" search="true" class="form-control" name="Phone" value="@Model.Customers.Phone" id="exampleInputTelefon" placeholder="Telefon">
    </div>
    <div class="form-group">
        <label for="exampleInputAdresse">Addresse</label>
        <div class="d-flex">
            <input type="text" class="form-control col-6 w-75" id="exampleInputAdresseStr" name="Address" value="@Model.Customers.Address" placeholder="Address">
            <input type="text" class="form-control col-6 w-25" id="exampleInputAdresseCity" name="PLZ" value="@Model.Customers.PLZ" placeholder="City">
        </div>
    </div>

    <button type="submit" class="btn btn-success btn-sm mt-4">Save</button>
</form>